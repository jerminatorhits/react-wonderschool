{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "allowUnusedLabels": true,
    "declaration": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "react",
      "node",
    ],
    "lib": [
      "dom",
      "es5",
      "es6",
      "esnext",
      "scripthost"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "isolatedModules": true,
    "reportFiles": [
      "src/**/*.{ts,tsx}"
    ]
  }
}
